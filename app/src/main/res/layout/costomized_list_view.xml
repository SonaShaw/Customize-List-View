<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/holo_blue_light">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/imgImage"
            android:layout_width="100dp"
            android:layout_height="100dp"
            app:srcCompat="@drawable/dice1" />

        <TextView
            android:id="@+id/txtImage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/imgImage"
            android:gravity="center_horizontal"
            android:text="@string/animal_name"
            android:textColor="@android:color/holo_red_light"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/txtImagePower"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_below="@+id/txtImage"
            android:layout_toEndOf="@+id/imgImage"
            android:gravity="center_horizontal"
            android:text="Animal Power"
            android:textColor="@android:color/holo_red_light"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/txtImageSpeed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_below="@+id/txtImagePower"
            android:layout_toEndOf="@+id/imgImage"
            android:gravity="center_horizontal"
            android:text="Animal Speed"
            android:textColor="@android:color/holo_red_light"
            android:textSize="24sp" />
    </RelativeLayout>
</LinearLayout>
